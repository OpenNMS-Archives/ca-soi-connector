        <!-- + itemtype (xs:string) -->
        <!-- + recursive (xs:boolean) -->
        <!--Format>
          <Field output='mdrelementid' input='id' format='{0}' />
        </Format-->
        <Write>
            <Field type='file' name='outfile' properties='*'/>
            <Field type='publishcache' properties='id,updatedAfter,entitytype,itemtype,recursive'/>
        </Write>
    </EventClass>
